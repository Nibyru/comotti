      $('.fitros-productos a').removeClass('active');
      $(this).addClass('active');
      var groupName = $(this).attr('data-group');
      $grid.shuffle('shuffle', function($el, shuffle) {
        var el;
        if ($el.data('groups').indexOf(groupName) > -1){
          el = $el;
        }
        return el
      });
