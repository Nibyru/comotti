    <link href=<%= asset_path("favicon.ico")%> rel="shortcut icon">
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/alerts' %>
    <%= yield %>
    <%= render 'shared/map' %>
    <%= render 'shared/footer' %>
  </body>
</html>
